{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
	"echoCommand": true,
    "tasks": [
		{
			"taskName": "compile",
			"args": ["run", "compile"],
			"suppressTaskName": true,
			"isShellCommand": true,
			"command": "npm",
			"options": {
				"cwd": "${workspaceRoot}"	
			}
		},
		{
			"taskName": "Run Server",
			"args": ["run", "start"],
			"suppressTaskName": true,
			"isShellCommand": true,
			"command": "npm",
			"options": {
				"cwd": "${workspaceRoot}"	
			}
		}

	]
}