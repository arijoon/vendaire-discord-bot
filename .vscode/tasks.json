{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
      {
        "label": "compile",
        "type": "shell",
        "command": "npm",
        "args": [
          "run",
          "tsc"
        ],
        "problemMatcher": "$tsc",
        "group": {
          "_id": "build",
          "isDefault": false
        }
      },
      {
        "label": "typescript-validate",
        "type": "shell",
        "command": "npm",
        "args": [
          "run",
          "tsc-validate"
        ],
        "problemMatcher": "$tsc"
      },
      {
        "label": "Run tests",
        "type": "shell",
        "command": "npm",
        "args": [
          "run",
          "test:all"
        ],
        "problemMatcher": "$tsc",
        "group": {
          "_id": "test",
          "isDefault": false
        }
      },
      {
        "label": "Run Server",
        "type": "shell",
        "command": "npm",
        "args": [
          "run",
          "start"
        ],
        "problemMatcher": []
      }
    ]
}