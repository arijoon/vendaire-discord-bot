{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": "src"
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
