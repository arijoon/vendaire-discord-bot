{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "downlevelIteration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": true,
        "skipLibCheck": true,
        "types": []
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules",
      "./node_module/*",
      "./node_module/**",
      "**/*.spec.ts"
    ]
}
